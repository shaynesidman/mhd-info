---
import NavBarItem from "./NavBarItem.astro";

const tabs = ["Spec", "Tech Stack", "c", "d", "e"];
const links = ["spec", "tech-stack", "c", "d", "e"];
---

<nav>
    <div class="flex flex-row justify-between items-center bg-[var(--alt)] px-4 mt-2 rounded-3xl">
        <!-- Logo -->
        <a 
            class="hover:cursor-pointer hover:bg-[var(--second-alt)] transition duration-300 py-1 px-2 rounded-md"
            href="/"
        >
            MHD
        </a>
        <!-- Tabs -->
        <div class="flex flex-row gap-2 py-1">
            {tabs.map((tab, index) => (
                <NavBarItem text={tab} href={links[index]} />
            ))}
        </div>
    </div>
</nav>